{{> navbar name=username}} <!-- This is the partial for the navigation bar, we use > right after the opening mustache to denote it's a partial -->

<div class="d-flex flex-column content"> <!-- ".content" will be the biggest div for all pages after login (for general margin and padding) -->
  <div class="container allorders-container">
    <div class="container order-container">

        <div class="card d-flex flex-row justify-content-between info-row0">
            <div class="info-ordernum">
                <h2 id="ordernumber">{{clname}}'s Orders</h2>
            </div>

            <div class="d-flex info-status_grp">
                <div class="info-p_status">
                    <button id="info-pbutton" type="button" class="btn btn-warning btn-lg btn-block">Upcoming Orders: {{upcoming}}</button>
                </div>

                <div class="info-p_status">
                    <button id="info-pbutton" type="button" class="btn btn-success btn-lg btn-block">Completed Orders: {{completed}}</button>
                </div>

            </div>
        </div>

        <div class="flex-row">
          <h3>Customer Information</h3>
          <table class="table table-bordered table-hover">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Contact Information</th>
                <th scope="col">Message Information</th>
                <th scope="col">Address</th>
              </tr>
            </thead>
            <tbody>
                  <tr>
                    <td>{{clname}}</td>
                    <td>{{contact}}</td>
                    <td>{{message}}</td>
                    <td>{{address}}</td>
                  </tr>
            </tbody>
          </table>
        </div>

        <div class="flex-row">
                <h3>Order History</h3>
                  <table class="table table-bordered table-hover">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Order Number</th>
                      <th scope="col">Customer Name</th>
                      <th scope="col">Contact Information</th>
                      <th scope="col">Message Information</th>
                      <th scope="col">Mode of Delivery</th>
                      <th scope="col">Address</th>
                      <th scope="col">Date Needed</th>
                      <th scope="col">Time Needed</th>
                      <th scope="col">Paella Size</th>
                      <th scope="col">Order status</th>
                      <th scope="col">Remarks</th>
                      <th scope="col">Pan Assigned</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#if records}}
                      {{#each records}}
                        <tr>
                          <td class="custorders-ordernum"><u>{{this.main.ordernum}}</u></td>
                          <td>{{this.clientinfo.name}}</td>
                          <td>{{this.clientinfo.contact_info}}</td>
                          <td>{{this.clientinfo.message_info}}</td>
                          <td>{{this.main.mode_of_delivery}}</td>
                          <td>{{this.clientinfo.address}}</td>
                          <td>{{this.main.date}}</td>
                          <td>{{this.main.time}}</td>
                          <td>{{this.main.paellasize}}</td>
                          <td>{{this.main.status}}</td>
                          <td>{{this.main.extraremarks}}</td>
                          <td>{{this.main.pan_used}}</td>
                        </tr>
                        {{/each}}
                    {{else}}
                      <tr>
                        <td>No orders available</td>
                      </tr>
                    {{/if}}
                  </tbody>
                  </table>
        </div>

    </div>
  </div>
</div>
