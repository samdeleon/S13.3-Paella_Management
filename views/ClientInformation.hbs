{{> navbar}} <!-- This is the partial for the navigation bar, we use > right after the opening mustache to denote it's a partial -->

<div class="d-flex flex-column content"> <!-- ".content" will be the biggest div for all pages after login (for general margin and padding) -->
  <div class="container allorders-container">
    <div class="container order-container">

        <div class="card d-flex flex-row justify-content-between info-row0">
            <div class="info-ordernum">
                <h2 id="ordernumber">{{clname}}'s Orders</h2>
            </div>

            <div class="d-flex info-status_grp">
                <div class="info-p_status">
                    <button id="info-pbutton" type="button" class="btn btn-warning btn-lg btn-block">Upcoming Orders: {{upcoming}}</button>
                </div>

                <div class="info-p_status">
                    <button id="info-pbutton" type="button" class="btn btn-success btn-lg btn-block">Completed Orders: {{completed}}</button>
                </div>

            </div>
        </div>

        <div id="info-form" class="card">
                <h4 class="card-header">Client Information</h4>

                <div class="card-body">
                    <p><b>Customer Name:</b> {{clname}}</p>
                    <p><b>Contact Information:</b> {{contact}}</p>
                    <p><b>Message Information:</b> {{message}}</p>
                    <p><b>Delivery Address:</b> {{address}}</p>
                </div>
        </div>

        <div class="card">
                <h4 class="card-header">Order History</h4>
                <div class="card-body">
                  <table class="table table-bordered table-hover">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Order Number</th>
                      <th scope="col">Customer Name</th>
                      <th scope="col">Contact Information</th>
                      <th scope="col">Mode of Delivery</th>
                      <th scope="col">Address</th>
                      <th scope="col">Date Needed</th>
                      <th scope="col">Time Needed</th>
                      <th scope="col">Paella Size</th>
                      <th scope="col">Order status</th>
                      <th scope="col">Extra Remarks</th>
                      <th scope="col">Pan Assigned</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#if records}}
                      {{#each records}}
                        <tr>
                          <td class="allorders-ordernum"><u>{{this.ordernum}}</u></td>
                          <td>{{this.name}}</td>
                          <td>{{this.contact_info}}</td>
                          <td>{{this.mode_of_delivery}}</td>
                          <td>{{this.address}}</td>
                          <td>{{this.date}}</td>
                          <td>{{this.time}}</td>
                          <td>{{this.paellasize}}</td>
                          <td>{{this.status}}</td>
                          <td>{{this.extraremarks}}</td>
                          <td>{{this.pan_used}}</td>
                        </tr>
                        {{/each}}
                    {{else}}
                      <tr>
                        <td>No orders available</td>
                      </tr>
                    {{/if}}
                  </tbody>
                  </table>
                </div>
        </div>

    </div>
  </div>
</div>
