{{> navbar name=username}} <!-- This is the partial for the navigation bar, we use > right after the opening mustache to denote it's a partial -->

<div class="d-flex flex-column content"> <!-- ".content" will be the biggest div for all pages after login (for general margin and padding) -->

    <div class="container orderform-container">
        <div class="order-form overflow-auto">
            <form action="/home"><!--method="POST" !-->
                <div class="form-row" style="padding-bottom: 10px;">
                    <div class="col-9">
                        <h2>Order Form</h2>
                    </div>
                    <div class="col">
                        <input id="old_customername" type="text" class="form-control form-control-sm" placeholder="Old Customer?">

                        <small id="error">
                            
                        </small>
                    </div>
                    <div class="col-align-self-end">
                        <button id="old_customer"type="button" class="btn btn-primary btn-sm">Search</button>
                    </div>

        
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="customer_name">Customer Name</label>
                    <input type="text" class="form-control" id="customer_name" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="contact_info">Contact Information</label>
                    <input type="text" class="form-control" id="contact_info" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="contact_info">Message Information</label>
                    <input type="text" class="form-control" id="message_info" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="mode_of_delivery">Mode of Delivery</label>
                    <select id="mode_of_delivery" class="form-control" required>
                        <option selected disabled value="">Which mode?</option>
                        <option>For Pick Up</option>
                        <option>For Delivery</option>
                        <option>For Service</option>
                    </select>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="delivery_address">Delivery Address</label>
                    <input type="text" class="form-control" id="delivery_address" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="date_needed">Date Needed</label>
                    <input type="date" class="form-control" id="date_needed" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="time_needed">Time Needed</label>
                    <input type="time" class="form-control" id="time_needed" required>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="paella_size">Paella Size</label>
                    <select id="paella_size" class="form-control" required>
                        <option selected disabled value="">Choose which size</option>
                        <option>14 inches</option>
                        <option>16 inches</option>
                        <option>20 inches</option>
                    </select>
                </div>
                <div class="form-row" style="padding-bottom: 10px;">
                    <label for="remarks"><br>Remarks</label>
                    <textarea class="form-control" id="remarks" rows="3"></textarea>
                    <small class="form-text text-muted">
                        You can leave this blank!
                    </small>
                </div>
                    <br>
                <button type="submit" id="submitOrder" class="btn btn-lg btn-primary btn-block">Submit Order</button>
            </form>
        </div>
    </div>
</div>
